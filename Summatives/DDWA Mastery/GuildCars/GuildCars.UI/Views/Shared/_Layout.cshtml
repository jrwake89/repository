<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm fixed-top col-xs-12 col-sm-12 col-md-12">
        <div class="container" id="navbar-border">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>
            <a class="navbar-brand" href="/"><img id="logo" src="@Url.Content("~/Images/logo.png")" /></a>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link nav-item" })</li>
                    <li>@Html.ActionLink("New Inventory", "New", "Inventory", null, new { @class = "nav-link nav-item" })</li>
                    <li>@Html.ActionLink("Used Inventory", "Used", "Inventory", null, new { @class = "nav-link nav-item" })</li>
                    <li>@Html.ActionLink("Specials", "Specials", "Home", null, new { @class = "nav-link nav-item", @id = "special-link" })</li>
                    <li>@Html.ActionLink("Contact", "ContactUs", "Home", null, new { @class = "nav-link nav-item" })</li>
                    <li>@Html.Partial("_LayoutAdmin")</li></ul>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>