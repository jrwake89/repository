@model IEnumerable<GuildCars.Model.Queries.UsersItem>
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

@Html.ActionLink("Add a new User","AddUser","Admin")
<table id="user-table" class="table-striped">
    <thead>
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
               
            <th>
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach(var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>@Html.ActionLink("Edit", "EditUser", "admin", new { id = user.UserId }, null)</td>
        </tr>

        }
    </tbody>
</table>

