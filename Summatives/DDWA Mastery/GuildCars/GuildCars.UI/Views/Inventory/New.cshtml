@model GuildCars.UI.Models.HomeViewModel
@{
    /**/

    ViewBag.Title = "New";
}
<div class="row col-12-xs">
    <h2>New Vehicles</h2>
</div>


<div class="col-12-xs">
    <form id="search-form-new">
        <div class="form-row even-search-rows">
            <div id="quick-search-div" class="col-12-sm col-4-md">
                <label id="quick-search-label" for="search-box" class="control-label">Quick Search</label>
                <input type="text" id="search-box" class="form-control" placeholder="Enter Make, Model, or Year">
            </div>

            <div class="col-12-sm col-4-md form-inline even-search-rows">
                <label for="minPrice-box" class="control-label">Price</label>
                <select class="form-control" id="minPrice-box">
                    <option value="0">No Min</option>,
                    <option value="1000">1,000</option>,
                    <option value="2000">2,000</option>,
                    <option value="3000">3,000</option>,
                    <option value="4000">4,000</option>,
                    <option value="5000">5,000</option>,
                    <option value="10000">10,000</option>,
                    <option value="12000">12,000</option>,
                    <option value="15000">15,000</option>,
                    <option value="20000">20,000</option>,
                    <option value="25000">25,000</option>,
                    <option value="30000">30,000</option>
                </select>

                <select class="form-control" id="maxPrice-box">
                    <option value="0">No Max</option>,
                    <option value="1000">1,000</option>,
                    <option value="2000">2,000</option>,
                    <option value="3000">3,000</option>,
                    <option value="4000">4,000</option>,
                    <option value="5000">5,000</option>,
                    <option value="10000">10,000</option>,
                    <option value="12000">12,000</option>,
                    <option value="15000">15,000</option>,
                    <option value="20000">20,000</option>,
                    <option value="25000">25,000</option>,
                    <option value="30000">30,000</option>
                </select>
            </div>

            <div class="col-12-sm col-4-md form-inline even-search-rows">
                <label for="minYear-box" class="control-label">Year</label>
                <select class="form-control" id="minYear-box">
                    <option value="0">No Min</option>,
                    <option value="2000">2000</option>,
                    <option value="2001">2001</option>,
                    <option value="2002">2002</option>,
                    <option value="2003">2003</option>,
                    <option value="2004">2004</option>,
                    <option value="2005">2005</option>,
                    <option value="2006">2006</option>,
                    <option value="2007">2007</option>,
                    <option value="2008">2008</option>,
                    <option value="2009">2009</option>,
                    <option value="2010">2010</option>,
                    <option value="2011">2011</option>,
                    <option value="2012">2012</option>,
                    <option value="2013">2013</option>,
                    <option value="2014">2014</option>,
                    <option value="2015">2015</option>,
                    <option value="2016">2016</option>,
                    <option value="2017">2017</option>,
                    <option value="2018">2018</option>,
                    <option value="2019">2019</option>
                </select>

                <select class="form-control" id="maxYear-box">
                    <option value="0">No Max</option>,
                    <option value="2000">2000</option>,
                    <option value="2001">2001</option>,
                    <option value="2002">2002</option>,
                    <option value="2003">2003</option>,
                    <option value="2004">2004</option>,
                    <option value="2005">2005</option>,
                    <option value="2006">2007</option>,
                    <option value="2008">2008</option>,
                    <option value="2009">2009</option>,
                    <option value="2010">2010</option>,
                    <option value="2011">2011</option>,
                    <option value="2012">2012</option>,
                    <option value="2013">2013</option>,
                    <option value="2014">2014</option>,
                    <option value="2015">2015</option>,
                    <option value="2016">2016</option>,
                    <option value="2017">2017</option>,
                    <option value="2018">2018</option>,
                    <option value="2019">2019</option>
                </select>
            </div>
        </div>

        <div class="col-12-xs" id="search-div-button">
            <button id="search-button" type="submit" class="btn btn-primary">Search</button>
        </div>

    </form>
    <div id="search-table-header" class="col-12-xs">
        <h2>Search Results</h2>
    </div>
    <div id="SearchVehicleTable" class="row col-12-xs">

    </div>

</div>




